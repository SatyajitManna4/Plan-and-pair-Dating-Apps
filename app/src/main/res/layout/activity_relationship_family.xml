<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".RelationshipFamilyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:text="Your preferences help us find a compatible match!"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relationship Expectations"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💑 What type of relationship do you prefer?"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:padding="10dp"
                        android:rowCount="3">

                        <CheckBox
                            android:id="@+id/check_relation_traditional"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Traditional"
                            android:layout_marginEnd="20dp"/>

                        <CheckBox
                            android:id="@+id/check_relation_modern"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modern" />

                        <CheckBox
                            android:id="@+id/check_relation_balanced"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balanced"
                            android:layout_marginEnd="20dp"/>

                        <CheckBox
                            android:id="@+id/check_relation_companionate"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:text="Companionate" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family Structure Preference"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🏡 What kind of family do you prefer?"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:padding="10dp"
                        android:rowCount="3">

                        <CheckBox
                            android:id="@+id/check_family_nuclear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nuclear Family"
                            android:layout_marginEnd="20dp"/>

                        <CheckBox
                            android:id="@+id/check_family_joint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Joint Family" />

                        <CheckBox
                            android:id="@+id/check_family_extended"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Extended Family "
                            android:layout_marginEnd="20dp"/>

                        <CheckBox
                            android:id="@+id/check_family_livein"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:text="Independent" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Family Involvement"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👨‍👩‍👧‍👦 How important is family involvement in marriage decisions?"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:padding="10dp"
                        android:rowCount="3">

                        <CheckBox
                            android:id="@+id/check_family_involve_high"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Highly Involved"
                            android:layout_marginEnd="20dp"/>

                        <CheckBox
                            android:id="@+id/check_family_involve_moderate"
                            android:layout_width="148dp"
                            android:layout_height="wrap_content"
                            android:text="Moderately Involved" />

                        <CheckBox
                            android:id="@+id/check_family_involve_minimal"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:text="Minimal Involvement " />

                        <CheckBox
                            android:id="@+id/check_family_involve_independentchoice"
                            android:layout_width="147dp"
                            android:layout_height="wrap_content"
                            android:text="Independent Choice" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Children Preferences"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👶 Do you want to have children?"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:padding="10dp"
                        android:rowCount="3">

                        <CheckBox
                            android:id="@+id/check_child_want"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Want Children"
                            android:layout_marginEnd="20dp"/>

                        <CheckBox
                            android:id="@+id/check_child_infuture"
                            android:layout_width="148dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content"
                            android:text="Open to Children in the Future" />

                        <CheckBox
                            android:id="@+id/check_child_nopreference"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:text="No Preference " />

                        <CheckBox
                            android:id="@+id/check_child_dontwant"
                            android:layout_width="147dp"
                            android:layout_height="wrap_content"
                            android:text="Do Not Want Children" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>